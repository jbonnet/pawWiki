<%= link_to 'New Fragment', new_fragment_path %>

<br>

<% @fragments.each do |fragment| %>
  <div>
    <h2><%= link_to fragment.title, fragment %></h2>
    <%= fragment.content %>
    <div><%= link_to 'Edit', edit_fragment_path(fragment) %> | 
    <%= link_to 'Destroy', fragment, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<% end %>
